@model EcoFriendly.Models.Organization;

<div class="jumbotron body-cold">
    <div class="text-center">
        <img src="~/images/eco-logo.png" alt="Eco logo" />
    </div>
   
    <div class="login-form">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header">Register organization</div>
                    <div class="card-body">
                        @using (Html.BeginForm("Register", "Registration", FormMethod.Post))
                        {
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Email</label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Password</label>
                                <div class="col-md-6">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control pass_show" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Name</label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control pass_show" })
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Location</label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Location, new { @class = "form-control pass_show" })
                                    @Html.ValidationMessageFor(m => m.Location)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Description</label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control pass_show" })
                                    @Html.ValidationMessageFor(m => m.Description)
                                </div>
                            </div>
                            <div class="col-md-6 offset-md-4 text-right">
                                <input type="submit" value="Create account" class="btn btn-custom" asp-controller="Registration" asp-action="Register" />
                            </div>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>