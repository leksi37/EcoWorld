@model EcoFriendly.Models.Credentials;

<div class="jumbotron body-cold">
    <div class="text-center">
        <img src="~/images/eco-logo.png" alt="Eco logo" />
    </div>
   
    <div class="login-form">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header">Login</div>
                    <div class="card-body">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Email</label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Password</label>
                                <div class="col-md-6">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control pass_show" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4 text-right">
                                <input type="submit" value="Log in" class="btn btn-custom" asp-controller="Login" asp-action="Login" />
                            </div>}
                        <div class="align-content-end">
                            To check current events continue as a <input type="submit" value="guest." class="btn btn-custom" asp-controller="Login" asp-action="Guest" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>